gem "lru_redux"

# Data processing and analysis
gem "json"
gem "yaml"

# Development and testing
group :development do
  gem "rubocop"
  gem "reek"
end

group :test do
  gem "rspec"
  gem "faker"
end

# Optional dependencies for specific features
gem "bcrypt"
gem "concurrent-ruby"
