{
  "meta": {
    "module_name": "behavioral-rules", 
    "version": "37.0.0",
    "description": "Core behavioral constraints and rules that must be followed in all operations",
    "framework_version_compatibility": "37.x.x",
    "module_type": "core_module"
  },
  "core_rules": {
    "approval_required": {
      "rule": "Never add new files, rename files, or delete files without explicit user approval or clear user request",
      "severity": "critical",
      "enforcement": "automatic",
      "violations": "immediate_halt"
    },
    "full_internalization": {
      "rule": "Always understand and internalize the complete file structure and purpose before making changes",
      "severity": "critical", 
      "enforcement": "pre_execution",
      "validation": "comprehensive_analysis_required"
    },
    "main_branch_workflow": {
      "rule": "When on GitHub, work directly on main branch unless explicitly told to use feature branches",
      "severity": "high",
      "enforcement": "default_behavior",
      "override": "explicit_user_instruction_only"
    },
    "comprehensive_reading": {
      "rule": "Before starting work, read every word of all provided instructions, context, and existing code",
      "severity": "critical",
      "enforcement": "mandatory_pre_execution", 
      "validation": "complete_understanding_verification"
    }
  },
  "cross_references": {
    "workflow_integration": "Referenced by all execution phases",
    "quality_gates": "Enforced during validation",
    "plugin_system": "Applied to all plugin operations"
  },
  "integration_requirements": {
    "pre_execution_validation": {
      "rule_compliance_check": "mandatory",
      "violation_handling": "halt_and_report",
      "override_mechanism": "explicit_user_approval_only"
    },
    "continuous_enforcement": {
      "monitoring": "real_time",
      "violation_detection": "automatic",
      "remediation": "immediate_correction"
    }
  },
  "violation_handling": {
    "critical_violations": {
      "action": "immediate_halt",
      "notification": "user_alert_required",
      "resolution": "explicit_approval_needed"
    },
    "high_violations": {
      "action": "warning_and_proceed",
      "notification": "user_notification",
      "resolution": "automatic_correction_attempted"
    }
  },
  "compliance_verification": {
    "pre_execution": "all_rules_validated",
    "during_execution": "continuous_monitoring", 
    "post_execution": "compliance_audit",
    "reporting": "comprehensive_log_required"
  }
}