{
  "meta": {
    "module_name": "workflow-engine",
    "version": "37.0.0",
    "description": "Execution phases, workflow logic, and process orchestration",
    "framework_version_compatibility": "37.x.x", 
    "module_type": "core_module"
  },
  "execution_phases": {
    "analyze": {
      "description": "Comprehensive analysis and understanding phase",
      "requirements": [
        "@ref:behavioral-rules.core_rules.comprehensive_reading",
        "@ref:behavioral-rules.core_rules.full_internalization"
      ],
      "deliverables": [
        "complete_context_understanding",
        "requirement_specification",
        "technical_approach_plan"
      ],
      "validation": "understanding_verification_required"
    },
    "plan": {
      "description": "Detailed implementation planning and design",
      "requirements": [
        "architectural_design",
        "implementation_strategy",
        "risk_assessment"
      ],
      "deliverables": [
        "detailed_implementation_plan",
        "resource_requirements",
        "timeline_estimation"
      ],
      "validation": "plan_review_and_approval"
    },
    "develop": {
      "description": "Implementation with continuous validation",
      "requirements": [
        "@ref:behavioral-rules.core_rules.approval_required",
        "@ref:universal-standards.quality_gates"
      ],
      "deliverables": [
        "working_implementation",
        "comprehensive_testing",
        "documentation_updates"
      ],
      "validation": "continuous_quality_gates"
    },
    "validate": {
      "description": "Comprehensive validation and verification",
      "requirements": [
        "@ref:universal-standards.accessibility",
        "@ref:universal-standards.performance",
        "@ref:universal-standards.security"
      ],
      "deliverables": [
        "validation_results",
        "performance_metrics",
        "security_assessment"
      ],
      "validation": "all_standards_compliance"
    },
    "deploy": {
      "description": "Deployment with monitoring and verification",
      "requirements": [
        "deployment_readiness_check",
        "rollback_plan",
        "monitoring_setup"
      ],
      "deliverables": [
        "production_deployment",
        "monitoring_dashboard",
        "incident_response_plan"
      ],
      "validation": "deployment_verification"
    }
  },
  "workflow_patterns": {
    "iterative_development": {
      "cycle": ["analyze", "plan", "develop", "validate"],
      "iteration_trigger": "requirement_change_or_feedback",
      "validation_gates": "each_phase_completion"
    },
    "continuous_integration": {
      "automated_testing": "every_commit",
      "quality_gates": "blocking_on_failure", 
      "deployment_pipeline": "automated_on_success"
    },
    "feedback_loops": {
      "user_feedback": "continuous_collection",
      "performance_monitoring": "real_time",
      "quality_metrics": "automated_tracking"
    }
  },
  "decision_engine": {
    "rule_evaluation": {
      "priority_order": [
        "critical_behavioral_rules",
        "security_requirements",
        "accessibility_standards",
        "performance_targets"
      ],
      "conflict_resolution": "highest_priority_wins",
      "override_mechanism": "explicit_user_approval"
    },
    "automation_triggers": {
      "quality_gate_failures": "immediate_halt",
      "security_violations": "automatic_remediation",
      "performance_degradation": "alert_and_investigate"
    }
  },
  "integration_points": {
    "behavioral_rules": "enforced_at_each_phase",
    "universal_standards": "validated_continuously", 
    "quality_gates": "blocking_checkpoints",
    "monitoring": "comprehensive_throughout"
  }
}