{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Framework v37.0.0 Plugin Schema",
  "description": "Validation schema for framework plugins and modules",
  "type": "object",
  "required": ["meta"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["plugin_name", "version", "description", "framework_version_compatibility"],
      "properties": {
        "plugin_name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "description": {
          "type": "string",
          "minLength": 10
        },
        "framework_version_compatibility": {
          "type": "string",
          "pattern": "^\\d+\\.[x\\d]+\\.[x\\d]+$"
        },
        "plugin_type": {
          "type": "string",
          "enum": ["core_module", "domain_plugin", "utility_plugin"]
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": true
}