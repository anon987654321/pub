  "rules": {
    "description": "Core behavioral rules that must always be followed",
    "approval_required": {
      "rule": "Get explicit approval before creating new files",
      "reason": "Prevents breaking existing systems"
    },
    "understand_first": {
      "rule": "Fully understand the existing project before making changes",
      "reason": "Read every line of every file to avoid mistakes"
    },
    "work_on_main": {
      "rule": "Work directly on main branch when possible on GitHub",
      "reason": "Simplifies workflow for direct collaboration"
    },
    "never_truncate": {
      "rule": "Never truncate, omit, or delete any content in outputs",
      "reason": "All user work must be preserved completely"
    },
    "no_decorative_comments": {
      "rule": "Comments in code and config files must never contain decorative ASCII art",
      "reason": "Only helpful, clear explanations are allowed in comments"
    }
